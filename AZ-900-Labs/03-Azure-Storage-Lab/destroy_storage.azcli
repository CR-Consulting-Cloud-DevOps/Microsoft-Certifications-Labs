#!/bin/bash
# File: destroy.azcli
# Objective: Delete the Resource Group created for the Storage Lab.

# --- Configuration Variables ---
RG_NAME="StorageLabRG" 

# 1. Delete Resource Group
echo "--- CLEANUP START ---"
